// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  cashBalance  Float         @default(0)
  transactions Transaction[]

  @@map("users")
}

model Transaction {
  id                Int        @id @default(autoincrement())
  restaurnat        Restaurant @relation(fields: [restaurnatId], references: [id])
  restaurnatId      Int
  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            Int
  dish              Dish       @relation(fields: [dishId], references: [id], onDelete: Cascade)
  dishId            Int
  transactionAmount Float
  transactionDate   DateTime   @default(now())

  @@map("transactions")
}

model Restaurant {
  id               Int               @id @default(autoincrement())
  restaurantName   String
  cashBalance      Float             @default(0)
  transactions     Transaction[]
  restaurantDishes RestaurantDish[]
  RestaurantTimes  RestaurantTimes[]

  @@map("restaurants")
}

model Dish {
  id               Int              @id @default(autoincrement())
  dishName         String
  restaurantDishes RestaurantDish[]
  transactions     Transaction[]

  @@map("dishes")
}

model RestaurantDish {
  id           Int        @id @default(autoincrement())
  restaurantId Int        @unique
  dishId       Int        @unique
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  dish         Dish       @relation(fields: [dishId], references: [id], onDelete: Cascade)
  price        Float

  @@map("restaurant_dishes")
}

model RestaurantTimes {
  id           Int        @id @default(autoincrement())
  openAt       DateTime
  closeAt      DateTime
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("restaurant_times")
}
